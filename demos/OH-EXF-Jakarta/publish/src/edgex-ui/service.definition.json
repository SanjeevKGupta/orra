{
    "org": "${HZN_ORG_ID}",
    "label": "${SERVICE_NAME}-${ARCH}",
    "url": "${SERVICE_NAME}",
    "version": "${SERVICE_VERSION}",
    "arch": "${ARCH}",
    "public": false,
    "sharable": "singleton",
    "requiredServices": [
        {
            "org": "${HZN_ORG_ID}",
            "url": "${EDGE_OWNER}.${EDGE_DEPLOY}.core-metadata",
            "version": "2.1.0",
            "arch": "${ARCH}"
        }
    ],
    "userInput": [
        { "name": "EDGEX_SECURITY_SECRET_STORE", "type": "boolean", "defaultValue": "false" }
    ],
    "deployment": {
        "services": {
            "${SERVICE_NAME}": {
                "image": "${DOCKER_IMAGE_BASE}:${SERVICE_VERSION}",
                "ports": [{
                    "HostIP": "0.0.0.0",
                    "HostPort": "4000:4000/tcp"
                }]
            }
        }
    }
}
